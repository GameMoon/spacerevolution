    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run WASM",
            "type": "shell",
            "command": "emcc index.cpp -s WASM=1 -o index.js;start http://localhost:8080/index.html"
        },
        {
            "label": "Start Python web",
            "type": "shell",
            "command": "python -m http.server 8080; python -m SimpleHTTPServer 8080",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run compiled WASM",
            "type": "shell",
            "command": " start http://localhost:8080/index.html"
        },
        {
            "label": "Build WASM",
            "type": "shell",
            "command": "emcc index.cpp -s WASM=1 -o index.js",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}