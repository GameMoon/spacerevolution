{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and RunWASM",
            "type": "shell",
            "command": "./buildandrun.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run compiled WASM",
            "type": "shell",
            "command": "main.html",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
        "label": "Build WASM",
        "type": "shell",
        "command": "emcc main.cpp -s WASM=1 -o main.html",
        "group": {
            "kind": "test",
            "isDefault": true
        }
        }
    ]
}