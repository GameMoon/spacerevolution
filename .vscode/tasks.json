{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run WASM",
            "type": "shell",
            "command": "./buildandrun.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start Python web",
            "type": "shell",
            "command": "./startweb.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run compiled WASM",
            "type": "shell",
            "command": "./index.html",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build WASM",
            "type": "shell",
            "command": "emcc index.cpp -s WASM=1 -o main.html",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}