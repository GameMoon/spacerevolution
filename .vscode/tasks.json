    "tasks": [
        {
            "label": "Build and Run WASM",
            "type": "shell",
            "command": "emcc index.cpp -s WASM=1 -o index.js --closure 1 -Oz -s EXTRA_EXPORTED_RUNTIME_METHODS=['cwrap'];start http://localhost:8080/index.html"
        },
        {
            "label": "Start Python web",
            "type": "shell",
            "command": "python webserver.py",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run compiled WASM",
            "type": "shell",
            "command": " start http://localhost:8080/index.html",
            "problemMatcher": []
        },
        {
            "label": "Build WASM",
            "type": "shell",
            "command": "em++ index.cpp -s WASM=1 -o index.js -s EXTRA_EXPORTED_RUNTIME_METHODS=['writeArrayToMemory'] -s TOTAL_MEMORY=33554432",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build Optmized WASM",
            "type": "shell",
            "command": "emcc index.cpp -s WASM=1 -o index.js  -Oz -s EXTRA_EXPORTED_RUNTIME_METHODS=['writeArrayToMemory'] ",
            "problemMatcher": []
        }
    ]
